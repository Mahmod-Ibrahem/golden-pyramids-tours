<script>
    const Ques_Button=document.querySelectorAll('[id^="Quest_"]')
    const Answers=document.querySelectorAll('[id^="Answer_"]')
    const PlusSign = document.querySelectorAll('[id^="plusSign_"]');
    const MinusSign = document.querySelectorAll('[id^="MinusSign_"]');
    Ques_Button.forEach(function (btn, index) {
        btn.addEventListener("click", function () {
            console.log(index)
            Answers[index].classList.toggle("max-h-96");
            Answers[index].classList.toggle("max-h-0");
            setTimeout(() => {
                PlusSign[index].classList.toggle("hidden");
                MinusSign[index].classList.toggle("hidden");
            }, 100);
        });
    });
</script>
